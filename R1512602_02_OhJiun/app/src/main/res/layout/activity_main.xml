<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_gravity="center"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <RadioButton android:id="@+id/button_jimin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jimin"
            />
        <RadioButton android:id="@+id/button_gongyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gongyou"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_leo"
            android:text="@string/leo"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_olivia"
            android:text="@string/olivia"
            />
    </RadioGroup>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/confirm"
        android:layout_gravity="center"
        android:onClick="confirmAnswer"
        />

</LinearLayout>