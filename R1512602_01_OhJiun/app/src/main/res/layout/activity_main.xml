<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button1"
            android:text="2"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button2"
            android:text="3"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button3"
            android:text="+"
            android:onClick="setSymbol"
            android:background="#6dfff5"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:text="4"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_toRightOf="@id/button4"
            android:text="5"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:text="6"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPlus"
            android:layout_toRightOf="@id/button6"
            android:text="-"
            android:onClick="setSymbol"
            android:background="#6dfff5"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button4"
            android:text="7"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:layout_toRightOf="@id/button7"
            android:text="8"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button6"
            android:layout_toRightOf="@id/button8"
            android:text="9"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonMinus"
            android:layout_toRightOf="@id/button9"
            android:text="*"
            android:onClick="setSymbol"
            android:background="#6dfff5"
            />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button7"
            android:text="C"
            android:background="#fff835"
            />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button8"
            android:layout_toRightOf="@id/buttonCancel"
            android:text="0"
            android:onClick="setDigit"
            android:background="#ff60e2"
            />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button9"
            android:layout_toRightOf="@id/button0"
            android:text="="
            android:background="#fff835"
            />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonMultiply"
            android:layout_toRightOf="@id/buttonEqual"
            android:text="/"
            android:onClick="setSymbol"
            android:background="#6dfff5"
            />
    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:gravity="right"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:background="#d6e5ff"
        android:id="@+id/result"
    />

</LinearLayout>